                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-user"> </i>
                                    {{#if user}}
                                    {{ user.name}}
                                    {{else}}
                                    Accounts
                                    {{/if}}
                                </a>
